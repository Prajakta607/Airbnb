<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <!-- form me sirf post get jati hai put request ke liye special pakage method-override package ko install karna padta hai-->
     <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" novalidate class="needs-validation">
               
            <div class="mb-3">
                <label for="tittel" class="form-label">Title</label>
                <input type="text" value="<%= listing.title %>" name="listing[title]" class="form-control" id="title" style="width:100%"  required> <div class="invalid-feedback"> enter valid title </div>
            </div>
            
                 
            <div class="mb-3">
                <label for="description" class="form-label">Desription</label>
                <textarea  type="text" name="listing[description]" class="form-control" id="description" style="width:100%" ><%= listing.description%>
                    required</textarea>
                <div class="invalid-feedback"> enter valid Description </div>
    
            </div>
    
            <div class="mb-3">
                <label for="img" class="form-label">Image Link</label>
                <input type="text" value="<%= listing.image%>" name="listing[img url]" class="form-control" id="img" style="width:100%" required >  <div class="invalid-feedback"> enter valid URL </div>
    
            </div>
    
            <div class="row">
                 <div class="mb-3  col-md-4">
                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" value=" â‚¹<%= listing.price%>" name="listing[location]" class="form-control" id="price" style="width:100%"  required> <div class="invalid-feedback"> enter valid Price </div>
                    </div>
             

                 </div>
                 <div class="mb-3  col-md-8">
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" value="<%= listing.country %>" name="listing[country]" class="form-control" id="country" style="width:100%" required > <div class="invalid-feedback"> enter valid country Name</div>
                    </div>

                 </div>
            </div>
    
          
            
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" value="<%= listing.location%>" name="listing[location]" class="form-control" id="location" style="width:100%" required>
                <div class="invalid-feedback"> enter valid location </div>
    
            </div>   
            
           <button class="btn btn-dark edit-btn mt-3">Edit</button>
        </form>
    
     </div>
  </div>
